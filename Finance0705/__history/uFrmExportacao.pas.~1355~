    procedure registraMovimentacao(pOrg, pTable, pAcao, pDsc, pStatus: string) ;

  public
    { Public declarations }
    function exportarLancamentosMega(pTable, pTipo: string; lista: TListaLancamentos): Integer;
  end;

var
  frmExportacao: TfrmExportacao;

