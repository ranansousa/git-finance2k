{$R *.dfm}

procedure TFPendentes.FormCreate(Sender: TObject);
var
QryPreenche : TFDQuery;
  linha,comando: String;
  indx,aux: integer;

begin




                comando := 'Select * from titulo_receber_pendente' ;
                QryPreenche := TFDQuery.Create(Self);
                QryPreenche.Connection := uBackup.FrmBackup.Conn;
                QryPreenche.Connection.Connected;
                QryPreenche.Close;
                QryPreenche.SQL.Add(comando);

                QryPreenche.Open();





end;

end.
