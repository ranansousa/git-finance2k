function fSoNumeros(psString: string): string;
begin
//  {$IFDEF VER230}
   {TRegEx precisa da declaração em uses de
    System.RegularExpressions}
    Result := TRegEx.Replace(psString, '\D','');
//  {$ENDIF}
end;

