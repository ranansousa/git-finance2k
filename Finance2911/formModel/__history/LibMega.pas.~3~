//  sAcentos2 := 'AIOUE AIOUE AIOUE AO AIOUEN aioue aioue aioue ao aiouen Ccao                              ';
//  for iFor := 1 to Length(psString) do begin
//    iAux := Pos(psString[iFor], sAcentos1);
