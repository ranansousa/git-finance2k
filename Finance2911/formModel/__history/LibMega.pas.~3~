      Qry.SQL.Add( 'SET GENERATOR GEN_ID_PLOCAIS_DOS TO 0' );
      Qry.ExecSQL;
      Qry.Close;
      Qry.SQL.Clear;


      //CCONTAS_LALUR_PARTE_B
      Qry.Close;
