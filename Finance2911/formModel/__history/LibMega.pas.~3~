//    FContabil.sGrau4 := Trim(Copy(sConta,1,7));
//    FContabil.sGrau5 := Trim(Copy(sConta,1,10));
//    FContabil.sGrau6 := Trim(Copy(sConta,1,16));
//    if liTamanhoConta = 1 then begin
//      FContabil.iGrau := 1;
//      FContabil.sContaAnt  := '';
//      FContabil.sContaMasc := Copy(sConta,1,1);
