      Qry.ExecSQL;
      Qry.Close;
      Qry.SQL.Clear;

      //LOCAL_PROVISAO
      Qry.Close;
      Qry.SQL.Clear;
      Qry.SQL.Add( 'CREATE GENERATOR GEN_ID_LOCAL_PROVISAO' );
      Qry.ExecSQL;
      Qry.Close;
