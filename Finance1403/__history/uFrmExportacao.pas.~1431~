procedure TfrmExportacao.btn1Click(Sender: TObject);
begin
  framePB1.Visible := True;
  framePB1.progressBar(10, 100);
end;

procedure TfrmExportacao.btnExportarCaixaBancoClick(Sender: TObject);
//operacoes realizadas do caixa para o banco
var
  tipoLancamento, pPonto, pTipo, pTable, IdFechamento, idLote: string;
  pId, loteInicial: Integer;
  fechamento: Boolean;
  vDebito: Currency;
  //armazena qtd de registros exportados
  qtdReg: Integer;
  lista: TListaLancamentos;
begin

  tipoLancamento := 'DEPOSITO TESOURARIA/BANCO';
  pTable := 'CONTA_BANCARIA_CREDITO';
  pTipo := 'TCB'; //transferencia CAIXA para BANCO
  lista := TListaLancamentos.Create;
  fechamento := true;
  cnpj := TOrgAtual.getCNPJ;
  qtdReg := 0;
  loMostraErros := TFMostraErros.Create(Self);
  limpaPainelExportacao;
  framePB1.progressBar(0, 100);
  framePB1.Visible := True;
 //se falhar acima. Pega o CNPJ  direto no database FInance
  if cnpj = '' then
  begin
    try
      pPonto := 'Obtendo CNPJ - FNC';
      cnpj := dmOrganizacao.obterCNPJOrganizacao;
    except
      raise(Exception).Create('Impossivel obter o CNPJ da Organização.');
    end;

  end;

  // Obter o codigo da empresa no MEGA usando o cnpj
  try
    pPonto := 'Obtendo ID MEGA   ';

  except
    raise(Exception).Create('Impossivel obter o identificador da empresa no Sistema Contábil. ' + pPonto + pTipo);
  end;

  // verifica se o lote informado existe
  if not idEmpresaSistemaContabil = (-1) then
  begin
    lote := StrToInt(dxEdtLote.Text);
    loteInicial := lote;

    //verifica se existe o lote que esta sendo inserido
    //verificacao em CLOTES do MEGA

    if dmMegaContabil.VerificaSeExistLote(idEmpresaSistemaContabil, lote, ano) then
    begin

      idLote := dmMegaContabil.qryExistLote.FieldByName('ID').AsString;
      PempecMsg.MsgInformation('Lote já existe no Sistema Contábil. ');
      fechamento := false;
      dxBtnImprimir.Enabled := false;
      Limpatela(Self);
      limpaPainelExportacao;
    end

  end;

  // verifica se tem ID_ORGANIZACAO Selecionada
  if idOrganizacao = '' then
  begin
    PempecMsg.MsgInformation('Será preciso selecionar uma Organização antes de prosseguir.');
    fechamento := false;
    dxBtnImprimir.Enabled := false;
    Limpatela(Self);
    limpaPainelExportacao;

  end
  else
  begin
     // verifica se tem fechamento apos a data inicial até 2020 e impede importar
    // recebe o ID EMPRESA e a data incial
    //ver com Roberto o prazo 2020

    if not (idEmpresaSistemaContabil = (-1)) then
    begin

      IdFechamento := dmMegaContabil.verificaFechamento(idEmpresaSistemaContabil, pDataInicial);
    end;
    if not (IdFechamento = string.Empty) then
    begin
      limpaPainelExportacao;
      fechamento := false;
      dxBtnImprimir.Enabled := false;
      btnExportarCBT.Enabled := False;
      Limpatela(Self);
      PempecMsg.MsgInformation('Tem fechamento registrado. Não será possível continuar. Verifique o periodo informado. ');
    end;
    if not (idEmpresaSistemaContabil = (-1)) then
    begin
    // pega o generator (ID) da tabela CLOTES
      pIdClotes := dmMegaContabil.retornarIDPorTabela('CLOTES');
      lote := 0;

      if not (dxEdtLote.Text = '') then
      begin
        lote := StrToInt(dxEdtLote.Text);
      end;
      loteInicial := lote;
      vDebito := 0; //o total dos debitos de todos os lancamentos

      if (dmMegaContabil.lotesRestritos(lote)) then
      begin
        dxEdtLote.Text := 'LOTE RESTRITO';
        //cbxMesLote.ItemIndex := 0;
        dxCbxMesLote.ItemIndex := 0;
        idLote := '';
      end
      else
      begin
        if lote > 0 then
        begin
          while dmMegaContabil.VerificaSeExistLote(idEmpresaSistemaContabil, lote, ano) do
          begin
        //verificar no papel pq  / { TODO -oRanan -cLote :  Ver pq nao pode lote 65 e 75 }
            lote := lote + 1;  //
            dxEdtLote.Text := IntToStr(lote);
            fechamento := true;
          end;
        end;
      end;
    end;

    if fechamento then
    begin
      dxEdtLote.Text := IntToStr(lote);
      statusExportar(1); // ativa export com cor verde
      Application.ProcessMessages;
      //inicio da transacao

      try
        tfdTransaction.Create(Self);
        tfdTransaction.Connection := dmConexao.ConnMega;
        tfdTransaction.StartTransaction;

        try
         //obtendo a lista com os lançamentos
          pPonto := 'Obtendo LISTA DE LANÇAMENTOS  > ';
          lista := dmExportaFinance.obterCaixaBancoPorPeriodo(idOrganizacao, ano, pDataInicial, pDataFinal, idEmpresaSistemaContabil, lote, loMostraErros);
          vDebito := obterValorDebito(lista);


        // PEGANDO O VALOR DE DEBITO DE PTABLE CONTA BANCARIA CREDITO
          // mudei em 22/11 vDebito := dmExportaFinance.obterValorDebitoGenericTOB(idOrganizacao, pTable, 'VALOR', tipoLancamento, pDataInicial, pDataFinal);

        //Gravando CLOTES para CBT
          if vDebito > 0 then
          begin
            if not dmMegaContabil.obterLotePorFiltro(idEmpresaSistemaContabil, lote, ano) then
            begin

              if dmMegaContabil.gravarCLote(ano, pIdClotes, idEmpresaSistemaContabil, lote, vDebito) then
              begin
                imgGravaLote.Visible := True;
                lblGravaLoteMega.Visible := True;
                ultimoLoteSC := lote;
                Application.ProcessMessages;
                Sleep(2000);

                //REALIZAR A EXPORTAÇÃO
                qtdReg := exportarLancamentosMega(pTable, pTipo, lista);

                //gravar registro do movimento
                  registraMovimentacao(idOrganizacao, pTable, 'EXPORTACAO', 'EXP DE ' + IntToStr(qtdReg) + ' DE ' + pTipo, 'EXPORTADO');

                if qtdReg > 0 then
                begin
                  lblExportaTTB.Visible := True;
                  imgTTB.Visible := True;
                  Application.ProcessMessages;
                  Sleep(2000);
                  btnExportarCaixaBanco.Enabled := False;
                  loMostraErros.Add('Lançamentos EXPORTADOS - ' + pTipo, False, True);
                  loMostraErros.Add(' Foram exportadas ' + IntToStr(qtdReg) + ' ' + pTipo, False, True);
                  loMostraErros.Add(' ---------------------------------------------------', True, True);

                end
                else
                begin
                  limpaPainelExportacao;
                  loMostraErros.Add('Não foram encontrados registros de ' + pTipo, True, True);

                end;

                tfdTransaction.Commit;

              end;

            end
            else
            begin
              lblGravaLoteMega.Visible := False;
              imgGravaLote.Visible := False;
              limpaPainelExportacao;
              PempecMsg.MsgInformation('Não foi possível gravar o lote no sistema contábil. ' + pTipo);
            end;

          end
          else
          begin
            limpaPainelExportacao;
            PempecMsg.MsgInformation('Não foram encontrados lançamentos ' + pTipo + ' para exportar.');
          end;

        except
          limpaPainelExportacao;
          tfdTransaction.Rollback;
          raise(Exception).Create('Ocorreram problemas com a exportação. Transação interrompida inesperadamente. ' + pPonto + pTipo);
        end;

      except
        on e: Exception do
          PempecMsg.MsgInformation(e.Message + sLineBreak + 'Erro ao tentar gravar o lote no Sistema Contábil! ' + pTipo);
      end;

    end;
  end;
  try
    limpaPainelExportacao;
    loMostraErros.caption := 'Aviso - Exportações  ' + pTipo;
    if loMostraErros.Count > 0 then
    begin
      loMostraErros.ShowModal;
    end;
  finally
    FreeAndNil(loMostraErros);
  end;

  btnGeraLote.Click;

end;

procedure TfrmExportacao.btnExportarCBTClick(Sender: TObject);
var
  tipoLancamento, pTipo, pTable, IdFechamento, idLote: string;
  pId, loteInicial: Integer;
  fechamento: Boolean;
  vDebito: Currency;
  //armazena qtd de registros exportados
  qtdCBT: Integer;
  lista: TListaLancamentos;
begin
  pTable := 'CONTA_BANCARIA_TRANSFERENCIA';
  pTipo := 'CBT'; //transferencia BANCO para CAIXA
  tipoLancamento := 'TRANSFERENCIA ENTRE CONTAS'; //operacao bancaria
  lista := TListaLancamentos.Create;
  fechamento := true;
  cnpj := TOrgAtual.getCNPJ;
  idEmpresaSistemaContabil := StrToInt(TOrgAtual.getIDSistemaContabil);
  qtdCBT := 0;
  loMostraErros := TFMostraErros.Create(Self);

  limpaPainelExportacao;
  framePB1.Visible := True;

 //se falhar acima. Pega o CNPJ  direto no database FInance
  if cnpj = '' then
  begin
    try
      cnpj := dmOrganizacao.obterCNPJOrganizacao;
    except
      raise(Exception).Create(pTable + 'Impossivel obter o CNPJ da Organização.');
    end;

  end;

  // verifica se o lote informado existe
  if not idEmpresaSistemaContabil = (-1) then
  begin
    lote := StrToInt(dxEdtLote.Text);
    loteInicial := lote;

    //verifica se existe o lote que esta sendo inserido
    //verificacao em CLOTES do MEGA

    if dmMegaContabil.VerificaSeExistLote(idEmpresaSistemaContabil, lote, ano) then
    begin

      idLote := dmMegaContabil.qryExistLote.FieldByName('ID').AsString;
      PempecMsg.MsgInformation('Lote já existe no Sistema Contábil. ');
      fechamento := false;
      dxBtnImprimir.Enabled := false;
      Limpatela(Self);
      limpaPainelExportacao;
    end

  end;

  // verifica se tem ID_ORGANIZACAO Selecionada
  if idOrganizacao = '' then
  begin
    PempecMsg.MsgInformation('Será preciso selecionar uma Organização antes de prosseguir.');
    fechamento := false;
    dxBtnImprimir.Enabled := false;
    Limpatela(Self);
    limpaPainelExportacao;

  end
  else
  begin
    // verifica se tem fechamento apos a data inicial até 2020 e impede importar
    // recebe o ID EMPRESA e a data incial
    //ver com Roberto o prazo 2020

    if not (idEmpresaSistemaContabil = (-1)) then
    begin

      IdFechamento := dmMegaContabil.verificaFechamento(idEmpresaSistemaContabil, pDataInicial);
    end;
    if not (IdFechamento = string.Empty) then
    begin
      limpaPainelExportacao;
      fechamento := false;
      dxBtnImprimir.Enabled := false;
      btnExportarCBT.Enabled := False;
      Limpatela(Self);
      PempecMsg.MsgInformation('Tem fechamento registrado. Não será possível continuar. Verifique o periodo informado. ');
    end;
    if not (idEmpresaSistemaContabil = (-1)) then
    begin
    // pega o generator (ID) da tabela CLOTES
      pIdClotes := dmMegaContabil.retornarIDPorTabela('CLOTES');
      lote := 0;

      if not (dxEdtLote.Text = '') then
      begin
        lote := StrToInt(dxEdtLote.Text);
      end;
      loteInicial := lote;
      vDebito := 0; //o total dos debitos de todos os lancamentos

      if (dmMegaContabil.lotesRestritos(lote)) then
      begin
        dxEdtLote.Text := 'LOTE RESTRITO';
        dxCbxMesLote.ItemIndex := 0;
        idLote := '';
      end
      else
      begin
        if lote > 0 then
        begin
          while dmMegaContabil.VerificaSeExistLote(idEmpresaSistemaContabil, lote, ano) do
          begin
        //verificar no papel pq  / { TODO -oRanan -cLote :  Ver pq nao pode lote 65 e 75 }
            lote := lote + 1;  //
            dxEdtLote.Text := IntToStr(lote);
            fechamento := true;
          end;
        end;
      end;
    end;

    if fechamento then
    begin
      dxEdtLote.Text := IntToStr(lote);
      statusExportar(1); // ativa export com cor verde
            Application.ProcessMessages;
      //inicio da transacao

      try

        tfdTransaction.Create(Self);
        tfdTransaction.Connection := dmConexao.ConnMega;
        tfdTransaction.StartTransaction;

        try

          try
         //obtendo a lista com os lançamentos
            lista := dmExportaFinance.obterCBTPorPeriodo(idOrganizacao, ano, pDataInicial, pDataFinal, idEmpresaSistemaContabil, lote, loMostraErros);

            vDebito := obterValorDebito(lista);

          except
            on e: Exception do
              PempecMsg.MsgInformation(e.Message + sLineBreak + 'Erro ao tentar obter CBT! ' + pTipo);
          end;
                // PEGANDO O VALOR DE DEBITO DE PTABLE
        // mudei em 22/11  vDebito := dmExportaFinance.obterValorDebitoGenericTOB(idOrganizacao, pTable, 'VALOR', tipoLancamento, pDataInicial, pDataFinal);
        //Gravando CLOTES para CBT

          if vDebito > 0 then
          begin
            if not dmMegaContabil.obterLotePorFiltro(idEmpresaSistemaContabil, lote, ano) then
            begin

              if dmMegaContabil.gravarCLote(ano, pIdClotes, idEmpresaSistemaContabil, lote, vDebito) then
              begin
                imgGravaLote.Visible := True;
                lblGravaLoteMega.Visible := True;
                ultimoLoteSC := lote;
                Application.ProcessMessages;
                Sleep(2000);
                try
                  qtdCBT := exportarLancamentosMega(pTable, pTipo, lista);

                  //gravar registro do movimento
                  registraMovimentacao(idOrganizacao, pTable, 'EXPORTACAO', 'EXP DE ' + IntToStr(qtdCBT) + ' DE ' + pTipo, 'EXPORTADO');

                except
                  on e: Exception do
                    PempecMsg.MsgInformation(e.Message + sLineBreak + 'Erro ao tentar EXPORTAR CBT! ' + pTipo);
                end;

                if qtdCBT > 0 then
                begin

                  framePB1.progressBar(100, 100);

                  lblExportaCBT.Visible := True;
                  imgCBT.Visible := True;
                  Application.ProcessMessages;
                  Sleep(2000);
                  btnExportarCBT.Enabled := False;
                  loMostraErros.Add('Transferências entre contas bancárias EXPORTADAS - CBT', False, True);
                  loMostraErros.Add(' Foram exportadas ' + IntToStr(qtdCBT) + ' CBT', False, True);
                  loMostraErros.Add(' ------------------------------------------------------------------------', True, True);

                end
                else
                begin
                  limpaPainelExportacao;
                  loMostraErros.Add('Não foram encontrados registros de ' + pTipo, True, True);

                end;

                tfdTransaction.Commit;
              end;

            end
            else
            begin
              lblGravaLoteMega.Visible := False;
              imgGravaLote.Visible := False;
              limpaPainelExportacao;
              PempecMsg.MsgInformation('Não foi possível gravar o lote no sistema contábil. ' + pTipo);
            end;

          end
          else
          begin
            limpaPainelExportacao;
            PempecMsg.MsgInformation('Não foram encontrados lançamentos para exportar. ' + pTipo);
          end;

        except
          limpaPainelExportacao;
          tfdTransaction.Rollback;
          raise(Exception).Create('Ocorreram problemas com a exportação. Transação interrompida inesperadamente. ' + pTipo);
        end;

      except
        on e: Exception do
          PempecMsg.MsgInformation(e.Message + sLineBreak + 'Erro ao tentar gravar o lote no Sistema Contábil! ' + pTipo);
      end;

    end;
  end;
  try
    limpaPainelExportacao;
    loMostraErros.caption := 'Aviso - Exportações';
    if loMostraErros.Count > 0 then
    begin
      loMostraErros.ShowModal;
    end;
  finally
    FreeAndNil(loMostraErros);
  end;

  btnGeraLote.Click;

end;

procedure TfrmExportacao.btnExportarTBTClick(Sender: TObject);
var
  tipoLancamento, pTipo, pTable, IdFechamento, idLote: string;
  pId, loteInicial: Integer;
  fechamento: Boolean;
  vDebito: Currency;
  //armazena qtd de registros exportados
  qtdReg: Integer;
  lista: TListaLancamentos;
begin
  pTable := 'CONTA_BANCARIA_DEBITO';
  pTipo := 'TBT';
  tipoLancamento := 'TRANSFERE BANCO/TESOURARIA'; //operacao bancaria
  lista := TListaLancamentos.Create;
  fechamento := true;
  cnpj := TOrgAtual.getCNPJ;
  qtdReg := 0;
  loMostraErros := TFMostraErros.Create(Self);
  limpaPainelExportacao;
  framePB1.progressBar(0, 100);
  framePB1.Visible := True;
 //se falhar acima. Pega o CNPJ  direto no database FInance
  if cnpj = '' then
  begin
    try
      cnpj := dmOrganizacao.obterCNPJOrganizacao;
    except
      raise(Exception).Create('Impossivel obter o CNPJ da Organização.');
    end;

  end;

   // verifica se o lote informado existe
  if not idEmpresaSistemaContabil = (-1) then
  begin
    lote := StrToInt(dxEdtLote.Text);
    loteInicial := lote;

    //verifica se existe o lote que esta sendo inserido
    //verificacao em CLOTES do MEGA

    if dmMegaContabil.VerificaSeExistLote(idEmpresaSistemaContabil, lote, ano) then
    begin

      idLote := dmMegaContabil.qryExistLote.FieldByName('ID').AsString;
      PempecMsg.MsgInformation('Lote já existe no Sistema Contábil. ');
      fechamento := false;
      dxBtnImprimir.Enabled := false;
      Limpatela(Self);
      limpaPainelExportacao;
    end

  end;

  // verifica se tem ID_ORGANIZACAO Selecionada
  if idOrganizacao = '' then
  begin
    PempecMsg.MsgInformation('Será preciso selecionar uma Organização antes de prosseguir.');
    fechamento := false;
    dxBtnImprimir.Enabled := false;
    Limpatela(Self);
    limpaPainelExportacao;

  end
  else
  begin
     // verifica se tem fechamento apos a data inicial até 2020 e impede importar
    // recebe o ID EMPRESA e a data incial
    //ver com Roberto o prazo 2020

    if not (idEmpresaSistemaContabil = (-1)) then
    begin

      IdFechamento := dmMegaContabil.verificaFechamento(idEmpresaSistemaContabil, pDataInicial);
    end;
    if not (IdFechamento = string.Empty) then
    begin
      limpaPainelExportacao;
      fechamento := false;
      dxBtnImprimir.Enabled := false;
      btnExportarCBT.Enabled := False;
      Limpatela(Self);
      PempecMsg.MsgInformation('Tem fechamento registrado. Não será possível continuar. Verifique o periodo informado. ');
    end;
    if not (idEmpresaSistemaContabil = (-1)) then
    begin
    // pega o generator (ID) da tabela CLOTES
      pIdClotes := dmMegaContabil.retornarIDPorTabela('CLOTES');

      lote := 0;

      if not (dxEdtLote.Text = '') then
      begin
        lote := StrToInt(dxEdtLote.Text);
      end;
      loteInicial := lote;
      vDebito := 0; //o total dos debitos de todos os lancamentos

      if (dmMegaContabil.lotesRestritos(lote)) then
      begin
        dxEdtLote.Text := 'LOTE RESTRITO';
        dxCbxMesLote.ItemIndex := 0;
        idLote := '';
      end
      else
      begin
        if lote > 0 then
        begin
          while dmMegaContabil.VerificaSeExistLote(idEmpresaSistemaContabil, lote, ano) do
          begin
        //verificar no papel pq  / { TODO -oRanan -cLote :  Ver pq nao pode lote 65 e 75 }
            lote := lote + 1;  //
            dxEdtLote.Text := IntToStr(lote);
            fechamento := true;
          end;
        end;
      end;
    end;

    if fechamento then
    begin
      dxEdtLote.Text := IntToStr(lote);
      statusExportar(1); // ativa export com cor verde
            Application.ProcessMessages;
      //inicio da transacao

      try
        tfdTransaction.Create(Self);
        tfdTransaction.Connection := dmConexao.ConnMega;
        tfdTransaction.StartTransaction;

        try
        //transfere do banco para a tesouraria
         //obtendo a lista com os lançamentos
          lista := dmExportaFinance.obterTBTPorPeriodo(idOrganizacao, ano, pDataInicial, pDataFinal, idEmpresaSistemaContabil, lote, loMostraErros);
          vDebito := obterValorDebito(lista);

        // PEGANDO O VALOR DE DEBITO DE PTABLE
         // vDebito := dmExportaFinance.obterValorDebitoGeneric(idOrganizacao, pTable, 'VALOR', dtDataInicial.Date, dtDataFinal.Date);
         // mudei em 22/11  vDebito := dmExportaFinance.obterValorDebitoGenericTOB(idOrganizacao, pTable, 'VALOR', tipoLancamento, pDataInicial, pDataFinal);
        //Gravando CLOTES para CBT
          if vDebito > 0 then
          begin
            if not dmMegaContabil.obterLotePorFiltro(idEmpresaSistemaContabil, lote, ano) then
            begin

              if dmMegaContabil.gravarCLote(ano, pIdClotes, idEmpresaSistemaContabil, lote, vDebito) then
              begin
                imgGravaLote.Visible := True;
                lblGravaLoteMega.Visible := True;
                ultimoLoteSC := lote;
                Application.ProcessMessages;
                Sleep(2000);

                //REALIZAR A EXPORTAÇÃO
                qtdReg :=  exportarLancamentosMega(pTable, pTipo, lista);
                //gravar registro do movimento
                  registraMovimentacao(idOrganizacao, pTable, 'EXPORTACAO', 'EXP DE ' + IntToStr(qtdReg) + ' DE ' + pTipo, 'EXPORTADO');

                if qtdReg > 0 then
                begin
                  lblExportaTBT.Visible := True;
                  imgTBT.Visible := True;
                  Application.ProcessMessages;
                  Sleep(5000);
                  btnExportarTBT.Enabled := False;
                  loMostraErros.Add('Lançamentos EXPORTADOS - ' + pTipo, False, True);
                  loMostraErros.Add(' Foram exportadas ' + IntToStr(qtdReg) + ' ' + pTipo, False, True);
                  loMostraErros.Add(' ---------------------------------------------------', True, True);

                end
                else
                begin
                  limpaPainelExportacao;
                  loMostraErros.Add('Não foram encontrados registros de ' + pTipo, True, True);

                end;

                tfdTransaction.Commit;

              end;

            end
            else
            begin
              lblGravaLoteMega.Visible := False;
              imgGravaLote.Visible := False;
              limpaPainelExportacao;
              PempecMsg.MsgInformation('Não foi possível gravar o lote no sistema contábil.');
            end;

          end
          else
          begin
            limpaPainelExportacao;
            PempecMsg.MsgInformation('Não foram encontrados lançamentos ' + pTipo + ' para exportar.');
          end;

        except
          limpaPainelExportacao;
          tfdTransaction.Rollback;
          raise(Exception).Create('Ocorreram problemas com a exportação. Transação interrompida inesperadamente. ' + pTipo);
        end;

      except
        on e: Exception do
          PempecMsg.MsgInformation(e.Message + sLineBreak + 'Erro ao tentar gravar o lote no Sistema Contábil! ' + pTipo);
      end;

    end;
  end;
  try
    limpaPainelExportacao;
    loMostraErros.caption := 'Aviso - Exportações ' + pTipo;
    if loMostraErros.Count > 0 then
    begin
      loMostraErros.ShowModal;
    end;
  finally
    FreeAndNil(loMostraErros);
  end;

  btnGeraLote.Click;

end;

procedure TfrmExportacao.btnExportaTPPROVClick(Sender: TObject);
var
  tipoLancamento, pPonto, pTipo, pTable, IdFechamento, idLote: string;
  pId, loteInicial: Integer;
  fechamento: Boolean;
  vDebito: Currency;
  //armazena qtd de registros exportados
  qtdReg: Integer;
  lista: TListaLancamentos;
begin
//exportar TP PROVISAO

  tipoLancamento := 'ABERTO/QUITADO';
  pTable := 'TITULO_PAGAR';
  pTipo := 'TPPROV'; //TITULO A PAGAR PROVISIONADO
  lista := TListaLancamentos.Create;
  fechamento := true;
  cnpj := TOrgAtual.getCNPJ;
  idEmpresaSistemaContabil := StrToInt(TOrgAtual.getIDSistemaContabil);
  qtdReg := 0;
  loMostraErros := TFMostraErros.Create(Self);
  limpaPainelExportacao;
  framePB1.progressBar(0, 100);
  framePB1.Visible := True;
 //se falhar acima. Pega o CNPJ  direto no database FInance
  if cnpj = '' then
  begin
    try
      pPonto := 'Obtendo CNPJ - FNC';
      cnpj := dmOrganizacao.obterCNPJOrganizacao;
    except
      raise(Exception).Create('Impossivel obter o CNPJ da Organização.');
    end;

  end;

  // verifica se o lote informado existe
  if not idEmpresaSistemaContabil = (-1) then
  begin
    lote := StrToInt(dxEdtLote.Text);
    loteInicial := lote;

    //verifica se existe o lote que esta sendo inserido
    //verificacao em CLOTES do MEGA

    if dmMegaContabil.VerificaSeExistLote(idEmpresaSistemaContabil, lote, ano) then
    begin

      idLote := dmMegaContabil.qryExistLote.FieldByName('ID').AsString;

      PempecMsg.MsgInformation('Lote já existe no Sistema Contábil. ');

      fechamento := false;
      dxBtnImprimir.Enabled := false;
      Limpatela(Self);
      limpaPainelExportacao;
    end

  end;

  // verifica se tem ID_ORGANIZACAO Selecionada
  if idOrganizacao = '' then
  begin
    PempecMsg.MsgInformation('Será preciso selecionar uma Organização antes de prosseguir.');
    fechamento := false;
    dxBtnImprimir.Enabled := false;
    Limpatela(Self);
    limpaPainelExportacao;

  end
  else
  begin
     // verifica se tem fechamento apos a data inicial até 2020 e impede importar
    // recebe o ID EMPRESA e a data incial
    //ver com Roberto o prazo 2020

    if not (idEmpresaSistemaContabil = (-1)) then
    begin

      IdFechamento := dmMegaContabil.verificaFechamento(idEmpresaSistemaContabil, pDataInicial);
    end;
    if not (IdFechamento = string.Empty) then
    begin
      limpaPainelExportacao;
      fechamento := false;
      dxBtnImprimir.Enabled := false;
      btnExportaTPPROV.Enabled := False;
      Limpatela(Self);
      PempecMsg.MsgInformation('Tem fechamento registrado. Não será possível continuar. Verifique o periodo informado. ');
    end;
    if not (idEmpresaSistemaContabil = (-1)) then
    begin
    // pega o generator (ID) da tabela CLOTES
      pIdClotes := dmMegaContabil.retornarIDPorTabela('CLOTES');

      lote := 0;

      if not (dxEdtLote.Text = '') then
      begin
        lote := StrToInt(dxEdtLote.Text);
      end;
      loteInicial := lote;

      if (dmMegaContabil.lotesRestritos(lote)) then
      begin
        dxEdtLote.Text := 'LOTE RESTRITO';
        dxCbxMesLote.ItemIndex := 0;
        idLote := '';
      end
      else
      begin
        if lote > 0 then
        begin
          while dmMegaContabil.VerificaSeExistLote(idEmpresaSistemaContabil, lote, ano) do
          begin
        //verificar no papel pq  / { TODO -oRanan -cLote :  Ver pq nao pode lote 65 e 75 }
            lote := lote + 1;  //
            dxEdtLote.Text := IntToStr(lote);
            fechamento := true;
          end;
        end;
      end;
    end;

    if fechamento then
    begin
      dxEdtLote.Text := IntToStr(lote);
      statusExportar(1); // ativa export com cor verde

      //inicio da transacao

      try
        tfdTransaction.Create(Self);
        tfdTransaction.Connection := dmConexao.ConnMega;
        tfdTransaction.StartTransaction;

        try
          vDebito := 0; //o total dos debitos de todos os lancamentos
         //obtendo a lista com os lançamentos
          pPonto := 'Obtendo LISTA DE LANÇAMENTOS  > ';

          lista := dmExportaFinance.obterTPPROVBase(idOrganizacao, ano, pDataInicial, pDataFinal, idEmpresaSistemaContabil, lote, loMostraErros);
          vDebito := obterValorDebito(lista);


        // PEGANDO O VALOR DE DEBITO DE PTABLE TP
         // vDebito := dmExportaFinance.obterValorDebitoTitulo(idOrganizacao, pTable, 'VALOR_NOMINAL', 'DATA_EMISSAO', pDataInicial, pDataFinal, 1);

          if vDebito > 0 then
          begin
            if not dmMegaContabil.obterLotePorFiltro(idEmpresaSistemaContabil, lote, ano) then
            begin

              if dmMegaContabil.gravarCLote(ano, pIdClotes, idEmpresaSistemaContabil, lote, vDebito) then
              begin
                imgGravaLote.Visible := True;
                lblGravaLoteMega.Visible := True;
                ultimoLoteSC := lote;
                Application.ProcessMessages;
                Sleep(5000);

                //REALIZAR A EXPORTAÇÃO
                qtdReg :=  exportarLancamentosMega(pTable, pTipo, lista);
                //gravar registro do movimento
                  registraMovimentacao(idOrganizacao, pTable, 'EXPORTACAO', 'EXP DE ' + IntToStr(qtdReg) + ' DE ' + pTipo, 'EXPORTADO');

                if qtdReg > 0 then
                begin
                  lblExportaTPPROV.Visible := True;
                  imgTPPROV.Visible := True;
                  Application.ProcessMessages;
                  Sleep(2000);
                  btnExportaTPPROV.Enabled := False;
                  loMostraErros.Add('Lançamentos EXPORTADOS - ' + pTipo, False, True);
                  loMostraErros.Add(' Foram exportadas ' + IntToStr(qtdReg) + ' ' + pTipo, False, True);
                  loMostraErros.Add(' ---------------------------------------------------', True, True);

                end
                else
                begin
                  limpaPainelExportacao;
                  loMostraErros.Add('Não foram encontrados registros de ' + pTipo, True, True);

                end;

                tfdTransaction.Commit;

              end;

            end
            else
            begin
              lblGravaLoteMega.Visible := False;
              imgGravaLote.Visible := False;
              limpaPainelExportacao;
              PempecMsg.MsgInformation('Não foi possível gravar o lote no sistema contábil. ' + pTipo);
            end;

          end
          else
          begin
            limpaPainelExportacao;
            PempecMsg.MsgInformation('Não foram encontrados lançamentos ' + pTipo + ' para exportar.');
          end;

        except
          limpaPainelExportacao;
          tfdTransaction.Rollback;
          raise(Exception).Create('Ocorreram problemas com a exportação. Transação interrompida inesperadamente. ' + pPonto + pTipo);
        end;

      except
        on e: Exception do
          PempecMsg.MsgInformation(e.Message + sLineBreak + 'Erro ao tentar gravar o lote no Sistema Contábil! ' + pTipo);
      end;

    end;
  end;
  try
    limpaPainelExportacao;
    loMostraErros.caption := 'Aviso - Exportações  ' + pTipo;
    if loMostraErros.Count > 0 then
    begin
      loMostraErros.ShowModal;
    end;
  finally
    FreeAndNil(loMostraErros);
  end;

  btnGeraLote.Click;

//ATE AQUI
end;

procedure TfrmExportacao.btnExportaTPQClick(Sender: TObject);
var
  tipoLancamento, pPonto, pTipo, pTable, IdFechamento, idLote: string;
  pId, loteInicial: Integer;
  fechamento: Boolean;
  vCredito,  vDebito: Currency;
  //armazena qtd de registros exportados
  qtdReg: Integer;
  lista: TListaLancamentos;
begin
//exportar TP quitado
  tipoLancamento := 'QUITADO';
  pTable := 'TITULO_PAGAR';
  pTipo := 'TPB'; //TITULO A PAGAR PROVISIONADO
  lista := TListaLancamentos.Create;
  fechamento := true;
  cnpj := TOrgAtual.getCNPJ;
  qtdReg := 0;
  loMostraErros := TFMostraErros.Create(Self);
  limpaPainelExportacao;
  framePB1.progressBar(0, 100);
  framePB1.Visible := True;
 //se falhar acima. Pega o CNPJ  direto no database FInance
  if cnpj = '' then
  begin
    try
      pPonto := 'Obtendo CNPJ - FNC';
      cnpj := dmOrganizacao.obterCNPJOrganizacao;
    except
      raise(Exception).Create('Impossivel obter o CNPJ da Organização.');
    end;

  end;

  // verifica se o lote informado existe
  if not idEmpresaSistemaContabil = (-1) then
  begin
    lote := StrToInt(dxEdtLote.Text);
    loteInicial := lote;

    //verifica se existe o lote que esta sendo inserido
    //verificacao em CLOTES do MEGA

    if dmMegaContabil.VerificaSeExistLote(idEmpresaSistemaContabil, lote, ano) then
    begin

      idLote := dmMegaContabil.qryExistLote.FieldByName('ID').AsString;

      PempecMsg.MsgInformation('Lote já existe no Sistema Contábil. ');

      fechamento := false;
      dxBtnImprimir.Enabled := false;
      Limpatela(Self);
      limpaPainelExportacao;
    end

  end;

  // verifica se tem ID_ORGANIZACAO Selecionada
  if idOrganizacao = '' then
  begin
    PempecMsg.MsgInformation('Será preciso selecionar uma Organização antes de prosseguir.');
    fechamento := false;
    dxBtnImprimir.Enabled := false;
    Limpatela(Self);
    limpaPainelExportacao;

  end
  else
  begin
     // verifica se tem fechamento apos a data inicial até 2020 e impede importar
    // recebe o ID EMPRESA e a data incial
    //ver com Roberto o prazo 2020

    if not (idEmpresaSistemaContabil = (-1)) then
    begin

      IdFechamento := dmMegaContabil.verificaFechamento(idEmpresaSistemaContabil, pDataInicial);
    end;
    if not (IdFechamento = string.Empty) then
    begin
      limpaPainelExportacao;
      fechamento := false;
      dxBtnImprimir.Enabled := false;
      btnExportaTPPROV.Enabled := False;
      Limpatela(Self);
      PempecMsg.MsgInformation('Tem fechamento registrado. Não será possível continuar. Verifique o periodo informado. ');
    end;
    if not (idEmpresaSistemaContabil = (-1)) then
    begin
    // pega o generator (ID) da tabela CLOTES
      pIdClotes := dmMegaContabil.retornarIDPorTabela('CLOTES');
      lote := 0;

      if not (dxEdtLote.Text = '') then
      begin
        lote := StrToInt(dxEdtLote.Text);
      end;
      loteInicial := lote;

      if (dmMegaContabil.lotesRestritos(lote)) then
      begin
        dxEdtLote.Text := 'LOTE RESTRITO';
        dxCbxMesLote.ItemIndex := 0;
        idLote := '';
      end
      else
      begin
        if lote > 0 then
        begin
          while dmMegaContabil.VerificaSeExistLote(idEmpresaSistemaContabil, lote, ano) do
          begin
        //verificar no papel pq  / { TODO -oRanan -cLote :  Ver pq nao pode lote 65 e 75 }
            lote := lote + 1;  //
            dxEdtLote.Text := IntToStr(lote);
            fechamento := true;
          end;
        end;
      end;
    end;

    if fechamento then
    begin
      dxEdtLote.Text := IntToStr(lote);
      statusExportar(1); // ativa export com cor verde

      //inicio da transacao

      try
        tfdTransaction.Create(Self);
        tfdTransaction.Connection := dmConexao.ConnMega;
        tfdTransaction.StartTransaction;

        try
          vDebito := 0; //o total dos debitos de todos os lancamentos
         //obtendo a lista com os lançamentos
         vCredito :=0;
          pPonto := 'Obtendo LISTA DE LANÇAMENTOS  > ';

          lista := dmExportaFinance.obterTPB_PROV(idOrganizacao, ano, pDataInicial, pDataFinal, idEmpresaSistemaContabil, lote, loMostraErros);
          vDebito := obterValorDebito(lista);
        //   vCredito :=obterValorCredito(lista);


        // PEGANDO O VALOR DE DEBITO DE PTABLE TP
       //   vDebito := dmExportaFinance.obterValorDebitoTPB(idOrganizacao, pTable, 'VALOR_NOMINAL', 'DATA_PAGAMENTO', pDataInicial, pDataFinal, 1);

        //Gravando CLOTES para CBT
          if vDebito > 0 then
          begin
            if not dmMegaContabil.obterLotePorFiltro(idEmpresaSistemaContabil, lote, ano) then
            begin

              if dmMegaContabil.gravarCLote(ano, pIdClotes, idEmpresaSistemaContabil, lote, vDebito) then
              begin
                imgGravaLote.Visible := True;
                lblGravaLoteMega.Visible := True;
                ultimoLoteSC := lote;
                Application.ProcessMessages;
                Sleep(1000);

                //REALIZAR A EXPORTAÇÃO
                qtdReg :=  exportarLancamentosMega(pTable, pTipo, lista);
                //gravar registro do movimento
                  registraMovimentacao(idOrganizacao, pTable, 'EXPORTACAO', 'EXP DE ' + IntToStr(qtdReg) + ' DE ' + pTipo, 'EXPORTADO');

                if qtdReg > 0 then
                begin
                  lblExportaTPB.Visible := True;

                  imgTPQ.Visible := True;
                  Application.ProcessMessages;
                  Sleep(2000);
                  btnExportaTPQ.Enabled := False;
                  loMostraErros.Add('Lançamentos EXPORTADOS - ' + pTipo, False, True);
                  loMostraErros.Add(' Foram exportadas ' + IntToStr(qtdReg) + ' ' + pTipo, False, True);
                  loMostraErros.Add(' ---------------------------------------------------', True, True);

                end
                else
                begin
                  limpaPainelExportacao;
                  loMostraErros.Add('Não foram encontrados registros de ' + pTipo, True, True);

                end;

                tfdTransaction.Commit;

              end;

            end
            else
            begin
              lblGravaLoteMega.Visible := False;
              imgGravaLote.Visible := False;
              limpaPainelExportacao;
              PempecMsg.MsgInformation('Não foi possível gravar o lote no sistema contábil. ' + pTipo);
            end;

          end
          else
          begin
            limpaPainelExportacao;
            PempecMsg.MsgInformation('Não foram encontrados lançamentos ' + pTipo + ' para exportar ou ocorrem problemas durante o processamento.');
          end;

        except
          limpaPainelExportacao;
          tfdTransaction.Rollback;
          raise(Exception).Create('Ocorreram problemas com a exportação. Transação interrompida inesperadamente. ' + pPonto + pTipo);
        end;

      except
        on e: Exception do
          PempecMsg.MsgInformation(e.Message + sLineBreak + 'Erro ao tentar gravar o lote no Sistema Contábil! ' + pTipo);
      end;

    end;
  end;
  try
    limpaPainelExportacao;
    loMostraErros.caption := 'Aviso - Exportações  ' + pTipo;
    if loMostraErros.Count > 0 then
    begin
      loMostraErros.ShowModal;
    end;
  finally
    FreeAndNil(loMostraErros);
  end;

  btnGeraLote.Click;

//ATE AQUI
end;

procedure TfrmExportacao.btnExportaTRPROVClick(Sender: TObject);
var
  tipoLancamento, pPonto, pTipo, pTable, IdFechamento, idLote: string;
  pId, loteInicial: Integer;
  fechamento: Boolean;
  vDebito: Currency;
  //armazena qtd de registros exportados
  qtdReg: Integer;
  lista: TListaLancamentos;
begin
//exportar TR provisionado

  tipoLancamento := 'ABERTO/QUITADO';
  pTable := 'TITULO_RECEBER';
  pTipo := 'TRPROV'; //TITULO A PAGAR PROVISIONADO
  lista := TListaLancamentos.Create;
  fechamento := true;
  cnpj := TOrgAtual.getCNPJ;
  idEmpresaSistemaContabil := StrToInt(TOrgAtual.getIDSistemaContabil);
  qtdReg := 0;
  loMostraErros := TFMostraErros.Create(Self);
  limpaPainelExportacao;
  framePB1.progressBar(0, 100);
  framePB1.Visible := True;
 //se falhar acima. Pega o CNPJ  direto no database FInance
  if cnpj = '' then
  begin
    try
      pPonto := 'Obtendo CNPJ - FNC';
      cnpj := dmOrganizacao.obterCNPJOrganizacao;
    except
      raise(Exception).Create('Impossivel obter o CNPJ da Organização.');
    end;

  end;

  // verifica se o lote informado existe
  if not idEmpresaSistemaContabil = (-1) then
  begin
    lote := StrToInt(dxEdtLote.Text);
    loteInicial := lote;
    //verifica se existe o lote que esta sendo inserido
    //verificacao em CLOTES do MEGA

    if dmMegaContabil.VerificaSeExistLote(idEmpresaSistemaContabil, lote, ano) then
    begin
      idLote := dmMegaContabil.qryExistLote.FieldByName('ID').AsString;
      PempecMsg.MsgInformation('Lote já existe no Sistema Contábil. ');
      fechamento := false;
      dxBtnImprimir.Enabled := false;
      Limpatela(Self);
      limpaPainelExportacao;
    end

  end;

  // verifica se tem ID_ORGANIZACAO Selecionada
  if idOrganizacao = '' then
  begin
    PempecMsg.MsgInformation('Será preciso selecionar uma Organização antes de prosseguir.');
    fechamento := false;
    dxBtnImprimir.Enabled := false;
    Limpatela(Self);
    limpaPainelExportacao;

  end
  else
  begin
     // verifica se tem fechamento apos a data inicial até 2020 e impede importar
    // recebe o ID EMPRESA e a data incial


    if not (idEmpresaSistemaContabil = (-1)) then
    begin
      IdFechamento := dmMegaContabil.verificaFechamento(idEmpresaSistemaContabil, pDataInicial);
    end;
    if not (IdFechamento = string.Empty) then
    begin
      limpaPainelExportacao;
      fechamento := false;
      dxBtnImprimir.Enabled := false;
      btnExportaTRPROV.Enabled := False;
      Limpatela(Self);
      PempecMsg.MsgInformation('Tem fechamento registrado. Não será possível continuar. Verifique o periodo informado. ');
    end;
    if not (idEmpresaSistemaContabil = (-1)) then
    begin
    // pega o generator (ID) da tabela CLOTES
      pIdClotes := dmMegaContabil.retornarIDPorTabela('CLOTES');
      lote := 0;
      if not (dxEdtLote.Text = '') then
      begin
        lote := StrToInt(dxEdtLote.Text);
      end;
      loteInicial := lote;
      if (dmMegaContabil.lotesRestritos(lote)) then
      begin
        dxEdtLote.Text := 'LOTE RESTRITO';
        dxCbxMesLote.ItemIndex := 0;
        idLote := '';
      end
      else
      begin
        if lote > 0 then
        begin
          while dmMegaContabil.VerificaSeExistLote(idEmpresaSistemaContabil, lote, ano) do
          begin

            lote := lote + 1;  //
            dxEdtLote.Text := IntToStr(lote);
            fechamento := true;
          end;
        end;
      end;
    end;

    if fechamento then
    begin
      dxEdtLote.Text := IntToStr(lote);
      statusExportar(1); // ativa export com cor verde

      //inicio da transacao

      try
        tfdTransaction.Create(Self);
        tfdTransaction.Connection := dmConexao.ConnMega;
        tfdTransaction.StartTransaction;

        try
          vDebito := 0; //o total dos debitos de todos os lancamentos
         //obtendo a lista com os lançamentos
          pPonto := 'Obtendo LISTA DE LANÇAMENTOS  > ';

          lista := dmExportaFinance.obterTitulosReceberProvisionados(idOrganizacao, ano, pDataInicial, pDataFinal, idEmpresaSistemaContabil, lote, loMostraErros);
           vDebito := obterValorDebito(lista);

        // PEGANDO O VALOR DE DEBITO DE PTABLE TP
          // vDebito := dmExportaFinance.obterValorDebitoTitulo(idOrganizacao, pTable, 'VALOR_NOMINAL', 'DATA_EMISSAO', pDataInicial, pDataFinal, 1);

          if vDebito > 0 then
          begin
            if not dmMegaContabil.obterLotePorFiltro(idEmpresaSistemaContabil, lote, ano) then
            begin

              if dmMegaContabil.gravarCLote(ano, pIdClotes, idEmpresaSistemaContabil, lote, vDebito) then
              begin
                imgGravaLote.Visible := True;
                lblGravaLoteMega.Visible := True;
                ultimoLoteSC := lote;
                Application.ProcessMessages;
                Sleep(2000);

                //REALIZAR A EXPORTAÇÃO
                qtdReg :=  exportarLancamentosMega(pTable, pTipo, lista);
                //gravar registro do movimento
                  registraMovimentacao(idOrganizacao, pTable, 'EXPORTACAO', 'EXP DE ' + IntToStr(qtdReg) + ' DE ' + pTipo, 'EXPORTADO');

                if qtdReg > 0 then
                begin
                  lblExportaTRPROV.Visible := True;
                  imgTRPROV.Visible := True;
                  Application.ProcessMessages;
                  Sleep(2000);
                  btnExportaTRPROV.Enabled := False;
                  loMostraErros.Add('Lançamentos EXPORTADOS - ' + pTipo, False, True);
                  loMostraErros.Add(' Foram exportadas ' + IntToStr(qtdReg) + ' ' + pTipo, False, True);
                  loMostraErros.Add(' ---------------------------------------------------', True, True);

                end
                else
                begin
                  limpaPainelExportacao;
                  loMostraErros.Add('Não foram encontrados registros de ' + pTipo, True, True);

                end;

                tfdTransaction.Commit;

              end;

            end
            else
            begin
              lblGravaLoteMega.Visible := False;
              imgGravaLote.Visible := False;
              limpaPainelExportacao;
              PempecMsg.MsgInformation('Não foi possível gravar o lote no sistema contábil. ' + pTipo);
            end;

          end
          else
          begin
            limpaPainelExportacao;
            PempecMsg.MsgInformation('Não foram encontrados lançamentos ' + pTipo + ' para exportar.');
          end;

        except
          limpaPainelExportacao;
          tfdTransaction.Rollback;
          raise(Exception).Create('Ocorreram problemas com a exportação. Transação interrompida inesperadamente. ' + pPonto + pTipo);
        end;

      except
        on e: Exception do
          PempecMsg.MsgInformation(e.Message + sLineBreak + 'Erro ao tentar gravar o lote no Sistema Contábil! ' + pTipo);
      end;

    end;
  end;
  try
    limpaPainelExportacao;
    loMostraErros.caption := 'Aviso - Exportações  ' + pTipo;
    if loMostraErros.Count > 0 then
    begin
      loMostraErros.ShowModal;
    end;
  finally
    FreeAndNil(loMostraErros);
  end;

  btnGeraLote.Click;
//ATE AQUI TR PROVISAO

end;

procedure TfrmExportacao.btnExportaTRQClick(Sender: TObject);
var
  tipoLancamento, pPonto, pTipo, pTable, IdFechamento, idLote: string;
  pId, loteInicial: Integer;
  fechamento: Boolean;
  vDebito: Currency;
  //armazena qtd de registros exportados
  qtdReg: Integer;
  lista: TListaLancamentos;
begin
  //exportar TR QUITADO

  tipoLancamento := 'QUITADO';
  pTable := 'TITULO_RECEBER';
  pTipo := 'TRB'; //TITULO A PRECEBER QUITADO
  lista := TListaLancamentos.Create;
  fechamento := true;
  cnpj := TOrgAtual.getCNPJ;
  qtdReg := 0;
  loMostraErros := TFMostraErros.Create(Self);
  limpaPainelExportacao;
  framePB1.progressBar(0, 100);
  framePB1.Visible := True;
 //se falhar acima. Pega o CNPJ  direto no database FInance
  if cnpj = '' then
  begin
    try
      pPonto := 'Obtendo CNPJ - FNC';
      cnpj := dmOrganizacao.obterCNPJOrganizacao;
    except
      raise(Exception).Create('Impossivel obter o CNPJ da Organização.');
    end;

  end;

  // verifica se o lote informado existe
  if not idEmpresaSistemaContabil = (-1) then
  begin
    lote := StrToInt(dxEdtLote.Text);
    loteInicial := lote;

    //verifica se existe o lote que esta sendo inserido
    //verificacao em CLOTES do MEGA

    if dmMegaContabil.VerificaSeExistLote(idEmpresaSistemaContabil, lote, ano) then
    begin

      idLote := dmMegaContabil.qryExistLote.FieldByName('ID').AsString;

      PempecMsg.MsgInformation('Lote já existe no Sistema Contábil. ');

      fechamento := false;
      dxBtnImprimir.Enabled := false;
      Limpatela(Self);
      limpaPainelExportacao;
    end

  end;

  // verifica se tem ID_ORGANIZACAO Selecionada
  if idOrganizacao = '' then
  begin
    PempecMsg.MsgInformation('Será preciso selecionar uma Organização antes de prosseguir.');
    fechamento := false;
    dxBtnImprimir.Enabled := false;
    Limpatela(Self);
    limpaPainelExportacao;

  end
  else
  begin
     // verifica se tem fechamento apos a data inicial até 2020 e impede importar
    // recebe o ID EMPRESA e a data incial
    //ver com Roberto o prazo 2020

    if not (idEmpresaSistemaContabil = (-1)) then
    begin

      IdFechamento := dmMegaContabil.verificaFechamento(idEmpresaSistemaContabil, pDataInicial);
    end;
    if not (IdFechamento = string.Empty) then
    begin
      limpaPainelExportacao;
      fechamento := false;
      dxBtnImprimir.Enabled := false;
      btnExportaTRQ.Enabled := False;
      Limpatela(Self);
      PempecMsg.MsgInformation('Tem fechamento registrado. Não será possível continuar. Verifique o periodo informado. ');
    end;
    if not (idEmpresaSistemaContabil = (-1)) then
    begin
    // pega o generator (ID) da tabela CLOTES
      pIdClotes := dmMegaContabil.retornarIDPorTabela('CLOTES');
      lote := 0;

      if not (dxEdtLote.Text = '') then
      begin
        lote := StrToInt(dxEdtLote.Text);
      end;
      loteInicial := lote;

      if (dmMegaContabil.lotesRestritos(lote)) then
      begin
        dxEdtLote.Text := 'LOTE RESTRITO';
        dxCbxMesLote.ItemIndex := 0;
        idLote := '';
      end
      else
      begin
        if lote > 0 then
        begin
          while dmMegaContabil.VerificaSeExistLote(idEmpresaSistemaContabil, lote, ano) do
          begin
        //verificar no papel pq  / { TODO -oRanan -cLote :  Ver pq nao pode lote 65 e 75 }
            lote := lote + 1;  //
            dxEdtLote.Text := IntToStr(lote);
            fechamento := true;
          end;
        end;
      end;
    end;

    if fechamento then
    begin
      dxEdtLote.Text := IntToStr(lote);
      statusExportar(1); // ativa export com cor verde

      //inicio da transacao

      try
        tfdTransaction.Create(Self);
        tfdTransaction.Connection := dmConexao.ConnMega;
        tfdTransaction.StartTransaction;

        try
          vDebito := 0; //o total dos debitos de todos os lancamentos   RECEBIDOS
         //obtendo a lista com os lançamentos
          pPonto := 'Obtendo LISTA DE LANÇAMENTOS  > ';
          lista := dmExportaFinance.obterTRB(idOrganizacao, ano, pDataInicial, pDataFinal, idEmpresaSistemaContabil, lote, loMostraErros);
          vDebito := obterValorDebito(lista);

        // PEGANDO O VALOR DE DEBITO DE PTABLE TR
        // vDebito := dmExportaFinance.obterValorDebitoTRB(idOrganizacao, pTable, 'VALOR_NOMINAL', 'DATA_PAGAMENTO', pDataInicial, pDataFinal, 1);

          if vDebito > 0 then
          begin
            if not dmMegaContabil.obterLotePorFiltro(idEmpresaSistemaContabil, lote, ano) then
            begin

              if dmMegaContabil.gravarCLote(ano, pIdClotes, idEmpresaSistemaContabil, lote, vDebito) then
              begin
                imgGravaLote.Visible := True;
                lblGravaLoteMega.Visible := True;
                ultimoLoteSC := lote;
                Application.ProcessMessages;
                Sleep(1000);

                //REALIZAR A EXPORTAÇÃO
                qtdReg :=  exportarLancamentosMega(pTable, pTipo, lista);
               //gravar registro do movimento
                  registraMovimentacao(idOrganizacao, pTable, 'EXPORTACAO', 'EXP DE ' + IntToStr(qtdReg) + ' DE ' + pTipo, 'EXPORTADO');

                if qtdReg > 0 then
                begin
                  lblExportaTPB.Visible := True;

                  imgTPQ.Visible := True;
                  Application.ProcessMessages;
                  Sleep(2000);
                  btnExportaTPQ.Enabled := False;
                  loMostraErros.Add('Lançamentos EXPORTADOS - ' + pTipo, False, True);
                  loMostraErros.Add(' Foram exportadas ' + IntToStr(qtdReg) + ' ' + pTipo, False, True);
                  loMostraErros.Add(' ---------------------------------------------------', True, True);

                end
                else
                begin
                  limpaPainelExportacao;
                  loMostraErros.Add('Não foram encontrados registros de ' + pTipo, True, True);

                end;

                tfdTransaction.Commit;

              end;

            end
            else
            begin
              lblGravaLoteMega.Visible := False;
              imgGravaLote.Visible := False;
              limpaPainelExportacao;
              PempecMsg.MsgInformation('Não foi possível gravar o lote no sistema contábil. ' + pTipo);
            end;

          end
          else
          begin
            limpaPainelExportacao;
            PempecMsg.MsgInformation('Não foram encontrados lançamentos ' + pTipo + ' para exportar.');
          end;

        except
          limpaPainelExportacao;
          tfdTransaction.Rollback;
          raise(Exception).Create('Ocorreram problemas com a exportação. Transação interrompida inesperadamente. ' + pPonto + pTipo);
        end;

      except
        on e: Exception do
          PempecMsg.MsgInformation(e.Message + sLineBreak + 'Erro ao tentar gravar o lote no Sistema Contábil! ' + pTipo);
      end;

    end;
  end;
  try
    limpaPainelExportacao;
    loMostraErros.caption := 'Aviso - Exportações  ' + pTipo;
    if loMostraErros.Count > 0 then
    begin
      loMostraErros.ShowModal;
    end;
  finally
    FreeAndNil(loMostraErros);
  end;

  btnGeraLote.Click;

//ATE AQUI
end;

procedure TfrmExportacao.btnFecharClick(Sender: TObject);
